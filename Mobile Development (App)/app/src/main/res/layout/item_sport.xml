<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="8dp"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/namaOlahraga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="25sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/checkBoxOlahraga"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="@string/foodname" />

        <TextView
            android:id="@+id/intesitas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="192dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="@+id/checkBoxOlahraga"
            card_view:layout_constraintTop_toBottomOf="@+id/namaOlahraga"
            tools:text="@string/intesitas" />

        <TextView
            android:id="@+id/target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView24"
            card_view:layout_constraintEnd_toEndOf="@+id/intesitas"
            card_view:layout_constraintTop_toTopOf="@+id/textView24"
            tools:text="@string/target" />

        <TextView
            android:id="@+id/durasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/textView28"
            card_view:layout_constraintEnd_toEndOf="@+id/target"
            card_view:layout_constraintTop_toTopOf="@+id/textView28"
            tools:text="@string/durasi" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/intesitas"
            card_view:layout_constraintStart_toStartOf="@+id/namaOlahraga"
            card_view:layout_constraintTop_toBottomOf="@+id/namaOlahraga" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/target"
            card_view:layout_constraintStart_toStartOf="@+id/textView5"
            card_view:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/durasi"
            card_view:layout_constraintStart_toStartOf="@+id/textView24"
            card_view:layout_constraintTop_toBottomOf="@+id/textView24" />

        <CheckBox
            android:id="@+id/checkBoxOlahraga"
            android:layout_width="81dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:text="done"
            android:textSize="16sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/namaOlahraga" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>